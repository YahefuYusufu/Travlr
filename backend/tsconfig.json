{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"lib": ["es6"],
		"allowJs": true,
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"noImplicitAny": true,
		"strictNullChecks": true,
		"esModuleInterop": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*", "src/server.ts"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
